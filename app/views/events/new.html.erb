<div class="row justify-content-center align-items-center">
	
	<div class="col-md-4 ">
		<h2 class="text-center">Create New Event</h2>
		<%= form_with(model: @event, local: true) do | f | %>

			<div class="form-group">
				<%= f.label :title %>
  		  <%= f.text_field :title, id: 'title', class: "form-control", required: true  %>
  		</div>

			<div class="form-group">
				<%= f.label :date %>
  		  <%= f.date_field :date, id: 'date', class: "form-control", required: true %>
  		</div>

			<div class="form-group">
				<%= f.label :description %>
  		  <%= f.text_area :description, id: 'description', class: "form-control", rows: "10", required: true  %>
  		</div>

			<div class="form-group">
				<%= f.submit "Submit", class: 'btn btn-primary' %>
  		</div>
	
		<% end %>
	</div>
</div>



<section class="jumbotron text-center">
    <div class="container">
      <h1>Private Events</h1>
      <h2>
        Welcome to our happy home, where all the interesting events are organized by friends for friends across the world to attend.
      </h2>
      <%= signup_cta  %> 
    </div>
</section>


<div class="album py-5 bg-light">
  <div class="container">
    <h2 class="text-center py-4">Upcomming Events</h2>
    <div class="row justify-content-center">
      <% @upcoming_events.each do |event| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
              <title><%= event.title %></title>
              <rect width="100%" height="100%" fill="#55595c"/>
              <text x="50%" y="50%" fill="#eceeef" dy=".3em">
              <%= event.title %>
              </text>
            </svg>
            <div class="card-body">
              <p class="card-text">
                <%= event.description %>
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary ">
                  <%= link_to 'View Details', event_path(event), class: '' %>
                  </button>
                  
                    <button type="button" class="btn btn-sm btn-outline-secondary">
                      <%= event_state(event) %>
                  </button>
                
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

